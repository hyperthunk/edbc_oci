
{deps, [
    {kvc, ".*",
        {git, "https://github.com/etrepum/kvc.git"}},
    {libconf, ".*", 
        {git, "https://github.com/hyperthunk/libconf.git"}}
]}.

{clean_files, ["ebin", "ebin", "cache", "deps"]}.

{erlydtl_opts, [
    {doc_root,   "t_src"},
    {source_ext, ".template"},
    {module_ext, ""}
]}.

{escript_name, "../configure"}.
{escript_incl_apps, [libconf, kvc]}.

{post_hooks, [
    {escriptize, "mkdir -p cache"}
]}.
